<odoo>
    <data>
        <record model="ir.ui.view" id="hotel_service_view_tree">
            <field name="name">hotel.service.list</field>
            <field name="model">hotel.service</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Hotel Service">
                    <field name='name' />
                </tree>
            </field>
        </record>

        <record id="view_hotel_service_kanban" model="ir.ui.view">
            <field name="name">hotel.service.kanban</field>
            <field name="model">hotel.service</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="id" />
                    <field name="name" />
                    <field name="logo" />
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                class="oe_kanban_global_click o_kanban_record_has_image_fill px-0 pb-0 border rounded-3 border-primary">
                                <div class="oe_kanban_details d-flex flex-column">
                                    <div class="o_kanban_record_top px-2 h-50">
                                        <field name="logo" widget='image' class='float-start'></field>
                                        <div class="o_kanban_record_headings ps-4 pe-2 mt-3">
                                            <div class="oe_kanban_details text-primary">
                                                <strong>
                                                    <field name="name" />
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="hotel_service_view_form">
            <field name="name">hotel.service.form</field>
            <field name="model">hotel.service</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Hotel Service">
                    <sheet>
                        <group>
                            <group>
                                <field name='name' required='1' />
                                <field name='service_type' />
                                <field name = "product_id" required="service_type == 'paid'" invisible="service_type != 'paid'"/>
                                <field name = "amount" required="service_type == 'paid'" invisible="service_type != 'paid'"/>
                            </group>
                            <group>
                                <field name="logo" widget="image" class="oe_avatar" />
                               
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Alloted Services List View -->
        <record model="ir.ui.view" id="alloted_services_list_view">
            <field name="name">Alloted Services Tree</field>
            <field name="model">hotel.booking.service.line</field>
            <field name="priority" eval="20" />
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Alloted Services" create="0" default_order="sequence_id desc, id">
                    <field name="state" invisible="1"/>
                    <field name='sequence_id' />
                    <field name='assign_to' widget="many2one_avatar_user" optional="show" />
                    <field name='service_id' />
                    <field name='amount' invisible='not amount' />
                    <button name="action_completed" string="Mark as Done"
                                            type="object"
                                            class="oe_highlight"
                                            invisible="state in ('done','cancel')" />
                                        <button name="action_service_cancel" string="Cancel" class="btn-secondary" type="object" invisible="state in ('done','cancel')"/>  
                </tree>
            </field>
        </record>

        <!-- Alloted Services Form View -->
        <record model="ir.ui.view" id="alloted_services_form_view">
            <field name="name">Alloted Services Form</field>
            <field name="model">hotel.booking.service.line</field>
            <field name="priority" eval="21" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Alloted Services" create="0">
                <header>
                 <field name="state" widget="statusbar"
                        statusbar_visible="draft,confirm,done" />
                </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name='sequence_id' readonly="1" />
                            </h1>
                        </div>
                        <!-- <field name="image_1920" widget="image" class="oe_avatar" /> -->
                        <group>
                            <group>
                                <field name='service_id' readonly="state == 'done'" />
                                <field name="booking_line_id" required="1" readonly="state == 'done'" />
                                <field name="booking_id" readonly='1' />
                            </group>
                            <group>
                                <field name="assign_to" widget="many2one_avatar_user" readonly="state == 'done'"/>
                                <field name='amount' readonly="state == 'done'" invisible='not amount' />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Actions -->

        <record id="action_hotel_service_menu" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="res_model">hotel.service</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- Action for House Service (Alloted) -->
        <record id="action_hotel_service_lines_menu" model="ir.actions.act_window">
            <field name="name">Alloted Services</field>
            <field name="res_model">hotel.booking.service.line</field>
            <field name="view_ids"
                eval="[(5,0,0),
            (0,0,{'sequence':1,'view_mode':'tree','view_id':ref('hotel_management_system.alloted_services_list_view')}),
            (0,0,{'sequence':2,'view_mode':'form','view_id':ref('hotel_management_system.alloted_services_form_view')}),
            ]" />
            <!-- <field name="search_view_id" ref="view_hotel_keeping_filter" /> -->
            <field name="view_mode">tree</field>
        </record>

        <!-- Menus -->

        <record model="ir.ui.view" id="hotel_email_template_tree">
            <field name="name">hotel.email.template.list</field>
            <field name="model">mail.template</field>
            <field name="inherit_id" ref="mail.email_template_tree"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//field[@name='description']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//field[@name='subject']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hotel_email_template_tree_all">
            <field name="name">Email Templates</field>
            <field name="res_model">mail.template</field>
            <!-- <field name="path">hotel-templates</field> -->
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="mail.email_template_tree" />
            <field name="domain">[('model_id', '=', 'hotel.booking')]</field>
        </record>
    </data>
</odoo>
