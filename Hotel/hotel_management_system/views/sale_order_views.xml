<odoo>
    <data>
        <record id="view_sale_order_form_inherit" model="ir.ui.view">
            <field name="name">store.store.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="is_room_type" invisible="1"/>
                    <!-- <group name="booking_details"> -->
                    <field name="hotel_id" readonly="state in ['sale', 'cancel']"/>
                    <field name="hotel_check_in" required="is_room_type == True"
                        readonly="state != 'draft' or booking_line_id != False" />
                    <field name="hotel_check_out" required="is_room_type == True"
                        readonly="state != 'draft' or booking_line_id != False" />
                    <!-- </group> -->
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_inline oe_stat_button pr-2" name="action_view_booking"
                        type="object" icon="fa-bold" invisible="booking_count == 0">
                        <field string="Booking" name="booking_count" readonly='True'
                            widget="statinfo"></field>
                    </button>
                </xpath>

                <xpath expr="//page[@name='order_lines']//tree//field[@name='product_id']"
                    position="replace">

                    <field name="product_id"
                        string="Product Variant"
                        readonly="not product_updatable"
                        required="not display_type and not is_downpayment"
                        options="{'no_open': True}" force_save="1"
                        context="{
                                            'partner_id': parent.partner_id,
                                            'quantity': product_uom_qty,
                                            'pricelist': parent.pricelist_id,
                                            'uom':product_uom,
                                            'company_id': parent.company_id,
                                            'default_lst_price': price_unit }"
                        domain="[('sale_ok', '=', True), ('product_tmpl_id.is_room_type','=',parent.is_room_type),'|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"
                        widget="sol_product_many2one" />
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='order_line']"
                    position="before">
                    <field name="booking_id" invisible="1"/>
                    <button name="action_add_rooms" type="object" string="Add Rooms" class="btn btn-primary btn-sm mb-1" invisible="booking_id != False or state != 'draft'"/>
                </xpath>
                <xpath expr="//page[@name='order_lines']//field[@name='product_id']"
                    position="after">
                    <field name="guest_info_ids" widget="one2many" />
                </xpath>

                <!-- Advance Payment Integration START -->
                <xpath expr="//header" position="inside">
                    <button name="action_register_payment"
                            type='object'
                            class="oe_highlight o_wow"
                            context="{'is_advance_payment_sale': True}"
                            string='Advance Payment' />
                </xpath>

                <field name="tax_totals" position="after">
                    <div colspan="2" class="d-flex">
                        <label for="paid_amount" class="" string="Paid Amount"/>
                        <field name="paid_amount" nolabel="1" widget="monetary"/>
                    </div>
                    <div colspan="2" class="d-flex">
                        <label for="balance_amount" class="" string="Balance Amount"/>
                        <field name="balance_amount" nolabel="1" widget="monetary"/>
                    </div>
                </field>
                
                <xpath expr="/form/sheet//div[hasclass('oe_button_box')]" position="inside">
                    <button class="oe_stat_button"
                        name="action_show_payment"
                        icon="fa-credit-card"
                        type="object">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="total_payment" />
                            </span>
                            <span>
                                Payments
                            </span>
                        </div>
                    </button>
                </xpath>
                <!-- Advance Payment Integration END -->
            </field>
        </record>

        <record model="ir.ui.view" id="custom_sale_order_line_view_form">
            <field name="name">sale.order.line.form</field>
            <field name="model">sale.order.line</field>
            <field name="priority" eval="20"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Booking Line">
                    <sheet>
                        <group name="room_info" string="Room Information">
                            <group>
                                <field name='product_id' domain="[('product_tmpl_id.is_room_type','=',True), ('id', 'not in', context.get('default_product_ids'))]"/>
                                <field invisible="not product_id" name="max_child" readonly="1"/>
                            </group>
                            <group>
                                <field name='product_uom_qty' readonly="True"/>
                                <field invisible="not product_id" name="max_adult" readonly="1"/>
                                <field name='order_id' invisible="1" required="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="Members Details">
                                <field name="warning" nolabel="1" style="color:red;" readonly="1" invisible="warning == ''"/>
                                <field name='guest_info_ids' nolabel="1" required="1">
                                    <tree string="Members" editable="bottom">
                                        <field name="name" />
                                        <field name="age" help="The member with age less than 18 will be considered as child and above 18 will be considered as Adult"/>
                                        <field name="gender" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                        <group class="oe_subtotal_footer oe_right" name="booking_line_total">
                            <field name="price_unit" string='Per Room Price' widget='monetary' options="{'currency_field': 'currency_id'}" />
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="price_subtotal" />
                            </div>
                            <field name="price_subtotal" nolabel="1" readonly="1"
                                class="oe_subtotal_footer_separator" widget='monetary'
                                options="{'currency_field': 'currency_id'}" />
                        </group>
                    </sheet>
                    <footer>
                        <button invisible="warning != ''" string="Save" special="save" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
