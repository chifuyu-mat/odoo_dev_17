<odoo>
    <data>
        <record model="ir.ui.view" id="hotel_booking_line_view_tree">
            <field name="name">hotel.booking.line.list</field>
            <field name="model">hotel.booking.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Booking Line">
                    <field name='product_id' />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hotel_booking_line_view_form">
            <field name="name">hotel.booking.line.form</field>
            <field name="model">hotel.booking.line</field>
            <field name="priority" eval="0"/>

            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Booking Line">
                    <header>
                        <button name="%(hotel_management_system.action_view_exchange_rooms)d"
                            invisible="status_bar != 'confirm'" string="" type="action"
                            class="oe_highlight"><i class="fa fa-refresh fa-spin" /> Exchange Room</button>
                        <field name="status_bar" widget="statusbar"
                            statusbar_visible="initial,confirm,allot,cancel" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_inline oe_stat_button pr-2" name="sale_order_view"
                                type="object"
                                invisible="status_bar != 'allot'">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"
                                    fill="currentColor" class="bi bi-shop-window me-2"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.371 2.371 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976l2.61-3.045zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0zM1.5 8.5A.5.5 0 0 1 2 9v6h12V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5zm2 .5a.5.5 0 0 1 .5.5V13h8V9.5a.5.5 0 0 1 1 0V13a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V9.5a.5.5 0 0 1 .5-.5z"></path>
                                </svg>
                                Room Services </button>
                        </div>
                        <field name="image_1920" widget="image" class="oe_avatar"
                            options="{'zoom': true, 'preview_image':'image_128'}" />
                        <div class="oe_title">
                            <h1>
                                <field name='booking_sequence_id' readonly='True' />
                            </h1>
                        </div>
                        <group name="room_info" string="Room Information">
                            <group>
                                <field name='product_id' required="1"
                                    domain="[('product_tmpl_id.is_room_type','=',True), ('product_tmpl_id.hotel_id', '=', booking_id.hotel_id)]"
                                    />
                                <field name="booking_id" invisible="1"/>
                                <field invisible="not product_id" name="max_child" readonly="1"/>
                            </group>
                            <group>
                                <field name='booking_days' />
                                <field invisible="not product_id" name="max_adult" readonly="1"/>
                            </group>
                            <group>
                                <field name="tax_ids" widget="many2many_tags"
                                    options="{'no_create': True}"
                                    context="{'search_view_ref': 'account.account_tax_view_search'}"
                                    domain="[('type_tax_use','=','sale')]" />
                                <field name='discount' groups="product.group_discount_per_so_line"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="Members Details">
                                <field name="warning" nolabel="1" style="color:red;" readonly="1" invisible="warning == ''"/>

                                <field name='guest_info_ids' nolabel="1" required="1">
                                    <tree string="Members" editable="bottom">
                                        <field name="name" />
                                        <field name="age" help="The member with age less than 18 will be considered as child and above 18 will be considered as Adult"/>
                                        <field name="gender" />
                                        <field name="is_adult" />
                                    </tree>
                                </field>
                            </page>
                            <page name="Description">

                                <field name='description' nolabel="1" 
                                readonly="False" widget="html" />


                            </page>

                        </notebook>

                        <group class="oe_subtotal_footer oe_right" name="booking_line_total">
                            <field name="price" string='Per Room Price' widget='monetary'
                                options="{'currency_field': 'currency_id'}" />
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="subtotal_price" />
                            </div>
                            <field name="subtotal_price" nolabel="1" readonly="1"
                                class="oe_subtotal_footer_separator" widget='monetary'
                                options="{'currency_field': 'currency_id'}" />
                        </group>
                    </sheet>
                    <footer>
                        <button invisible="warning != ''" string="Save" special="save" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="custom_hotel_booking_line_view_form">
            <field name="name">hotel.booking.line.form</field>
            <field name="model">hotel.booking.line</field>
            <field name="priority" eval="20"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Booking Line">
                    <sheet>
                        <group name="room_info" string="Room Information">
                            <group>
                                <field name='product_id'
                                    domain="[('product_tmpl_id.is_room_type','=',True), ('id', 'not in', context.get('default_product_ids'))]"
                                    context="{'default_hotel_id': active_id}"
                                    />
                                <field name="booking_id" invisible="1"/>
                                <field invisible="not product_id" name="max_child" readonly="1"/>
                            </group>
                            <group>
                                <field name='booking_days' />
                                <field invisible="not product_id" name="max_adult" readonly="1"/>
                            </group>
                            <group>
                                <field name="tax_ids" widget="many2many_tags"
                                    options="{'no_create': True}"
                                    context="{'search_view_ref': 'account.account_tax_view_search'}"
                                    domain="[('type_tax_use','=','sale')]" />
                                <field name='discount' groups="product.group_discount_per_so_line"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="Members Details">
                                <field name="warning" nolabel="1" style="color:red;" readonly="1" invisible="warning == ''"/>

                                <field name='guest_info_ids' nolabel="1" required="1">
                                    <tree string="Members" editable="bottom">
                                        <field name="name" />
                                        <field name="age" help="The member with age less than 18 will be considered as child and above 18 will be considered as Adult"/>
                                        <field name="gender" />
                                    </tree>
                                </field>
                            </page>
                            <page name="Description">

                                <field name='description' nolabel="1" 
                                readonly="False" widget="html" />
                            </page>
                        </notebook>

                        <group class="oe_subtotal_footer oe_right" name="booking_line_total">
                            <field name="price" string='Per Room Price' widget='monetary'
                                options="{'currency_field': 'currency_id'}" />
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="subtotal_price" />
                            </div>
                            <field name="subtotal_price" nolabel="1" readonly="1"
                                class="oe_subtotal_footer_separator" widget='monetary'
                                options="{'currency_field': 'currency_id'}" />
                        </group>
                    </sheet>
                    <footer>
                        <button invisible="warning != ''" string="Save" special="save" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
