<odoo>
    <template id="booking_details_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                    <t t-set="address">
                        <div t-field="doc.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                        <p t-if="doc.partner_id.vat">
                            <t t-esc="doc.partner_id.company_id.country_id.vat_label or 'Tax ID'" />
                            : <span
                                t-field="doc.partner_id.vat" />
                        </p>
                    </t>
                    <div class="page">
                        <div class="oe_structure" />

                        <h2 class="mt64">
                            <span>Booking # </span>
                            <t t-esc="doc.sequence_id" />
                        </h2>

                        <div class="row mt64 mb64" id="informations">
                            <div class="col-auto col-2 mw-100 mb-2">
                                <strong>Check in Date:</strong>
                                <p class="m-0" t-field="doc.check_in"
                                    t-options='{"widget": "date"}' />
                            </div>
                            <div class="col-auto col-2 mw-100 mb-2">
                                <strong>Check out Date:</strong>
                                <p class="m-0" t-field="doc.check_out"
                                    t-options='{"widget": "date"}' />
                            </div>
                            <div t-if="doc.user_id.name" class="col-auto col-2 mw-100 mb-2">
                                <strong>Manager:</strong>
                                <p class="m-0" t-field="doc.user_id" />
                            </div>
                            <div t-if="doc.status_bar" class="col-auto col-2 mw-100 mb-2">
                                <strong>Status:</strong>
                                <p class="m-0" t-field="doc.status_bar" />
                            </div>
                            <div t-if="doc.status_bar" class="col-auto col-2 mw-100 mb-2">
                                <strong>Source:</strong>
                                <p class="m-0" t-field="doc.booking_reference" />
                            </div>


                        </div>

                        <div class="row mt16 mb64" id="attachment">
                            <div t-if="doc.docs_ids" class="mb-2">
                                <h4>
                                    <strong>Attached Documents :</strong>
                                </h4>
                                <t t-foreach="doc.docs_ids" t-as="attachment">
                                    <div class="d-inline p-2" t-field="attachment.name" />
                                </t>
                            </div>
                        </div>

                        <t t-if="doc.hotel_service_lines">
                            <h4>
                                <strong>Services:</strong>
                            </h4>

                            <table class="table mt16 mb64 table-sm o_main_table">

                                <thead style="display: table-row-group">
                                    <tr>
                                        <th name="th_description" class="text-left">Service</th>
                                        <th class="text-left">Service Type</th>
                                        <th class="text-left">Price</th>
                                        <th class="text-left">Status</th>

                                    </tr>
                                </thead>
                                <tbody class="booking_tbody">
                                    <t t-foreach="doc.hotel_service_lines" t-as="line">
                                        <tr class='bg-200 font-weight-bold o_line_section'>
                                            <td name="td_name">
                                                <span t-field="line.service_id" />
                                            </td>
                                            <td name="td_name">
                                                <span t-field="line.service_type" />
                                            </td>
                                            <td name="td_name">
                                                <span t-field="line.amount" />
                                            </td>
                                            <td name="td_name">
                                                <span t-field="line.state" />
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>

                            </table>
                        </t>


                        <table class="table mt16 mb64 table-sm o_main_table">

                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_description" class="text-left">Reference No</th>
                                    <th name="th_name" class="text-right">Room Name </th>
                                    <th name="th_quantity" class="text-right">No. of Days</th>
                                    <th name="th_priceunit" class="text-right">Price</th>
                                    <th name="th_subtotal" class="text-right">
                                        <span>Total Price</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="booking_tbody" style='border: none !important;'>

                                <t t-set="current_subtotal" t-value="0" />

                                <t t-foreach="doc.booking_line_ids" t-as="line">
                                    <t t-set="price"
                                        t-value="line.booking_id.currency_id._convert(line.subtotal_price, doc.currency_id, line.env.company, datetime.datetime.now())" />
                                    <t t-set="current_subtotal" t-value="current_subtotal + price" />

                                    <tr class='bg-200 font-weight-bold o_line_section'>
                                        <td name="td_name">
                                            <span t-field="line.booking_sequence_id" />
                                        </td>
                                        <td name="td_name" class="text-right">
                                            <span t-field="line.product_id.name" />
                                        </td>
                                        <td name="td_name" class="text-right">
                                            <span t-field="line.booking_days" />
                                        </td>
                                        <td name="td_priceunit" class="text-right">
                                            <span t-field="line.price" />
                                        </td>
                                        <td name="subtotal_price" class="text-right">
                                            <span>
                                                <t t-esc="line.subtotal_price" />
                                            </span>
                                        </td>
                                    </tr>
                                </t>
                                <tr class="is-subtotal mt64 mb64 text-end" style='border: none !important;'>
                                    <td name="td_section_subtotal" colspan="99" style='border: none !important;'>
                                        <strong class="mr16">Tax Amount:</strong>
                                        <span t-esc="doc.tax_amount"
                                            t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                        />
                                    </td>
                                </tr>
                                <tr class="is-subtotal mt64 mb64 text-end" style='border: none !important;'>
                                    <td name="td_section_subtotal" colspan="99" style='border: none !important;'>
                                        <strong class="mr16">Paid Amount:</strong>
                                        <span t-esc="doc.paid_amount"
                                            t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                        />
                                    </td>
                                </tr>
                                <tr class="is-subtotal mt64 mb64 text-end" style='border: none !important;'>
                                    <td name="td_section_subtotal" colspan="99" style='border: none !important;'>
                                        <strong class="mr16">Balance Amount:</strong>
                                        <span t-esc="doc.balance_amount"
                                            t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                        />
                                    </td>
                                </tr>
                                <tr class="is-subtotal mt64 mb64 text-end" style='border: none !important;'>
                                    <td name="td_section_subtotal" colspan="99" style='border: none !important;'>
                                        <strong class="mr16">Subtotal:</strong>
                                        <span t-esc="doc.total_amount"
                                            t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_booking_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <t t-set="address">
                <div t-field="doc.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                <p t-if="doc.partner_id.vat">
                    <t t-esc="doc.partner_id.company_id.country_id.vat_label or 'Tax ID'" /> : <span
                        t-field="doc.partner_id.vat" />
                </p>
            </t>
            <div class="page">
                <div class="oe_structure" />

                <h2 class="mt64">
                    <span>Booking # </span>
                    <t t-esc="doc.booking_id.sequence_id" />
                </h2>

                <div class="row mt64 mb64" id="informations">
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Check in Date:</strong>
                        <p class="m-0" t-field="doc.booking_id.check_in"
                            t-options='{"widget": "date"}' />
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Check out Date:</strong>
                        <p class="m-0" t-field="doc.booking_id.check_out"
                            t-options='{"widget": "date"}' />
                    </div>
                    <div t-if="doc.booking_id.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Manager:</strong>
                        <p class="m-0" t-field="doc.booking_id.user_id" />
                    </div>
                </div>

                <table class="table mt64 mb64 table-sm o_main_table">

                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_description" class="text-left">Reference No</th>
                            <th name="th_quantity" class="text-right">Order No</th>
                            <th name="th_priceunit" class="text-right">Order Date</th>
                            <th name="th_subtotal" class="text-right">
                                <span>Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="booking_tbody" style="border: none !important;">

                        <t t-set="current_subtotal" t-value="0" />

                        <t t-foreach="doc.order_ids" t-as="line">
                            <t t-set="price"
                                t-value="line.currency_id._convert(line.amount_total, doc.booking_id.currency_id, line.env.company, datetime.datetime.now())" />
                            <t t-set="current_subtotal" t-value="current_subtotal + price" />

                            <tr class='bg-200 font-weight-bold o_line_section'>
                                <td name="td_name">
                                    <span t-field="line.booking_id.sequence_id" />
                                </td>
                                <td name="td_quantity" class="text-right">
                                    <span t-field="line.name" />
                                </td>
                                <td name="td_priceunit" class="text-right">
                                    <span t-field="line.date_order" />
                                </td>
                                <td name="amount_total" class="text-right">
                                    <span>
                                        <t t-esc="price" />
                                    </span>
                                </td>
                            </tr>
                        </t>
                        <tr class="is-subtotal mt64 mb64 text-end" style='border: none !important;'>
                            <td name="td_section_subtotal" colspan="99" style='border: none !important;'>
                                <strong class="mr16">Paid Amount:</strong>
                                <span t-esc="doc.booking_id.paid_amount"
                                    t-options='{"widget": "monetary", "display_currency": doc.booking_id.currency_id}'
                                />
                            </td>
                        </tr>
                        <tr class="is-subtotal mt64 mb64 text-end" style='border: none !important;'>
                            <td name="td_section_subtotal" colspan="99" style='border: none !important;'>
                                <strong class="mr16">Balance Amount:</strong>
                                <span t-esc="doc.booking_id.balance_amount"
                                    t-options='{"widget": "monetary", "display_currency": doc.booking_id.currency_id}'
                                />
                            </td>
                        </tr>
                        <tr class="is-subtotal mt64 mb64 text-end" style='border: none !important;'>
                            <td name="td_section_subtotal" colspan="99" style='border: none !important;'>
                                <strong class="mr16">Subtotal: </strong>
                                <span t-esc="current_subtotal"
                                    t-options='{"widget": "monetary", "display_currency": doc.booking_id.currency_id}'
                                />
                            </td>
                        </tr>
                    </tbody>

                </table>

            </div>
        </t>
    </template>
    <template id="report_booking">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hotel_management_system.report_booking_document"
                    t-lang="doc.partner_id.lang" />
            </t>
            <t t-foreach="docs.order_ids" t-as="doc">
                <t t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>
    <template id="report_sale_order_separate">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="hotel_management_system.report_booking_document"
                    t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>
    <template id="report_sale_order_detailed_bill">
        <t t-call="web.html_container">
            <t t-foreach="docs.order_ids" t-as="doc">
                <t t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>

