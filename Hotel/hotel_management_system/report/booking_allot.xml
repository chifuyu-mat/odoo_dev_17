    <!-- Mail template is done in a NOUPDATE block So users can freely customize/delete them -->
    <data>
        <record id="hotel_booking_allot_id" model="mail.template">
            <field name="name">Rooms Allotment</field>
            <field name="email_from">{{object.user_id.email_formatted}}</field>
            <field name="subject">Rooms Allotment</field>
            <field name="email_to">{{object.partner_id.email or ''}}</field>
            <field name="model_id" ref="hotel_management_system.model_hotel_booking" />
            <field name="auto_delete" />
            <field name="lang">{{object.partner_id.lang}}</field>
            <field name="body_html" type="html">

                <div
                    style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; color: rgb(34, 34, 34); background-color: #FFF;">
                    <h1>Rooms has been alloted  !!</h1>
                    <h2 class="mt64">
                        <span>Booking # </span>
                        <t t-esc="object.sequence_id" />
                    </h2>

                    <div class="row mt64 mb64" id="informations">
                        <div class="col-auto col-3 mw-100 mb-2">
                            <strong>Check in Date:</strong>
                            <p class="m-0" t-field="object.check_in"
                                t-options='{"widget": "date"}' />
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2">
                            <strong>Check out Date:</strong>
                            <p class="m-0" t-field="object.check_out"
                                t-options='{"widget": "date"}' />
                        </div>
                        <div t-if="object.user_id.name" class="col-auto col-3 mw-100 mb-2">
                            <strong>Manager:</strong>
                            <p class="m-0" t-field="object.user_id" />
                        </div>
                    </div>

                    <table class="table mt64 mb64 table-sm o_main_table">

                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_description" class="text-left">Reference No</th>
                                <th name="th_quantity" class="text-right">Order No</th>
                                <th name="th_priceunit" class="text-right">Order Date</th>
                                <th name="th_subtotal" class="text-right">
                                    <span>Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="booking_tbody">

                            <t t-set="current_subtotal" t-value="0" />

                            <t t-foreach="object.order_id" t-as="line">
                                <t t-set="price"
                                    t-value="line.currency_id._convert(line.amount_total, object.currency_id, line.env.company, datetime.datetime.now())" />
                                <t t-set="current_subtotal" t-value="current_subtotal + price" />

                                <tr class='bg-200 font-weight-bold o_line_section'>
                                    <td name="td_name">
                                        <span t-field="line.booking_line_id.booking_sequence_id" />
                                    </td>
                                    <td name="td_quantity" class="text-right">
                                        <span t-field="line.name" />
                                    </td>
                                    <td name="td_priceunit" class="text-right">
                                        <span t-field="line.date_order" />
                                    </td>
                                    <td name="amount_total" class="text-right">
                                        <span>
                                            <t t-esc="price" />
                                        </span>
                                    </td>
                                </tr>
                            </t>
                            <tr class="is-subtotal mt64 mb64 text-end">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": object.currency_id}'
                                    />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </field>
        </record>
    </data>
</odoo>
