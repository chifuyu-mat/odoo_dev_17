<odoo>
    <record id="hotel_housekeeping_wizard" model="ir.ui.view">
        <field name="name">Assign Housekeeping</field>
        <field name="model">hotel.housekeeping.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Housekeeping">
                <group>
                    <field name="room_id" />
                    <field name="state" />
                    <field name="assign_to" />
                </group>
                <footer>
                    <button string="Confirm" type="object" name="create_housekeeping"
                        class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
