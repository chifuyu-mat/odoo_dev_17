<templates id="template" xml:space="preserve">
    <t t-name="wk_hotel_pos_expension.RoomInfoButton">
        <t t-set="booking" t-value="bookingName"/>
        <t t-log="booking"/>

        <div class="control-button customer-button btn rounded-0 fw-bolder text-truncate" 
            t-attf-class="{{booking ? 'btn-primary' : 'btn-light'}}"
            t-on-click="() => this.click()">

            <i class="fa fa-bed me-1" role="img" aria-label="Rooms" title="Rooms"/>
            <t t-esc="booking" t-if="booking" />
            <t t-else="">
                Add Room
            </t>
        </div>
    </t>
</templates>
